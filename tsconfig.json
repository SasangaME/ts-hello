{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "esm": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "rootDir": "src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@basics/*": [
        "basics/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}